<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_radio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.islavdroid.vomerapp.RadioActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="6dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    </android.support.v7.widget.Toolbar>
    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_below="@+id/but_lay"
        android:layout_marginTop="20dp"
    android:layout_centerHorizontal="true"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/image"
        android:src="@drawable/ic_volume_up_black_24px"
        android:layout_height="wrap_content" />
    <SeekBar
        android:layout_width="200dp"

        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/image"
        android:theme="@style/MyEditTextTheme"
        android:layout_height="wrap_content"



        android:id="@+id/seekBar" />
</RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/but_lay"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
    <pl.bclogic.pulsator4droid.library.PulsatorLayout


        android:id="@+id/pulsator2"

        android:layout_centerInParent="true"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:pulse_count="6"
        app:pulse_duration="5000"
        app:pulse_repeat="0"
        app:pulse_color="#FFEB3B"
        app:pulse_startFromScratch="false"
        app:pulse_interpolator="Linear"/>

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/button_rec"
        android:background="@null"
        android:id="@+id/btn_rec"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"

        android:layout_marginTop="132dp" />
    </RelativeLayout>
</RelativeLayout>
